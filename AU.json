                    // Динамическое изменение позиции
                    setInterval(() => {
                        const currentX = parseFloat(orb.style.transform.match(/translate\\(([^,]+)/)[1]) || startX;
                        const currentY = parseFloat(orb.style.transform.match(/translate\\([^,]+,([^)]+)/)[1]) || startY;
                        
                        const targetX = currentX + (Math.random() - 0.5) * 20;
