                    align-items: center;
                    margin: 0;
                    padding: 0;
                }
                
                .icon-wrapper {
                    position: absolute;
                    width: 180px;
                    height: 180px;
                    top: calc(50% - 90px);
                    left: calc(50% - 90px);
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    opacity: 1;
                    animation: fadeInIcon 0.5s ease-out forwards;
                }
                
                .icon-image {
                    width: 100%;
                    height: 100%;
                    object-fit: contain;
                    filter: 
                        drop-shadow(0 0 30px rgba(100, 181, 246, 0.8))
                        drop-shadow(0 0 50px rgba(100, 181, 246, 0.6))
                        drop-shadow(0 0 70px rgba(100, 181, 246, 0.4));
