                // Оптимизированные частицы - меньшее количество, но лучше оптимизированы
                for(let i = 0; i < 80; i++) {
                    const particle = document.createElement('div');
                    particle.className = 'particle';
                    
                    const size = Math.random() * 3 + 1;
                    const color = ['#64b5f6', '#ffb74d', '#9c27b0', '#26c6da'][Math.floor(Math.random() * 4)];
