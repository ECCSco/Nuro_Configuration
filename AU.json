    const transitionHTML = `
        <!DOCTYPE html>
        <html>
        <head>
            <meta charset="UTF-8">
            <style>
                :root {
                    --primary-bg: #0a0a0a;
                    --accent-blue: #64b5f6;
                    --accent-orange: #ffb74d;
                }
                
                * {
                    margin: 0;
                    padding: 0;
                    box-sizing: border-box;
                    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
                    -webkit-tap-highlight-color: transparent;
                    -webkit-font-smoothing: antialiased;
                    -webkit-user-select: none;
                    -moz-user-select: none;
                    -ms-user-select: none;
                    user-select: none;
                }
                
                html, body {
                    width: 100%;
                    height: 100%;
                    overflow: hidden;
                    background: transparent;
                }
                
                body {
                    width: 100%;
                    height: 100%;
                    background: transparent;
                    overflow: hidden;
                    position: relative;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    margin: 0;
                    padding: 0;
                }
                
                .icon-wrapper {
                    position: absolute;
                    width: 180px;
                    height: 180px;
                    top: calc(50% - 90px);
                    left: calc(50% - 90px);
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    opacity: 1;
                    animation: fadeInIcon 0.5s ease-out forwards;
                }
                
                .icon-image {
                    width: 100%;
                    height: 100%;
                    object-fit: contain;
                    filter: 
                        drop-shadow(0 0 30px rgba(100, 181, 246, 0.8))
                        drop-shadow(0 0 50px rgba(100, 181, 246, 0.6));
                    animation: iconPulse 2s ease-in-out infinite;
                }
                
                @keyframes fadeInIcon {
                    from { opacity: 0; transform: scale(0.8); }
                    to { opacity: 1; transform: scale(1); }
                }
                
                @keyframes iconPulse {
                    0%, 100% {
                        filter: 
                            drop-shadow(0 0 30px rgba(100, 181, 246, 0.8))
                            drop-shadow(0 0 50px rgba(100, 181, 246, 0.6));
                        transform: scale(1);
                    }
                    50% {
                        filter: 
                            drop-shadow(0 0 40px rgba(100, 181, 246, 1))
                            drop-shadow(0 0 60px rgba(100, 181, 246, 0.8));
                        transform: scale(1.05);
                    }
                }
                
                @keyframes moveAndFade {
                    0% {
                        top: calc(50% - 90px);
                        left: calc(50% - 90px);
                        transform: scale(1);
                        opacity: 1;
                    }
                    100% {
                        top: var(--target-y);
                        left: var(--target-x);
                        transform: scale(0.6);
                        opacity: 0;
                    }
                }
            </style>
        </head>
        <body>
            <div class="icon-wrapper">
                ${iconBase64 ? `<img class="icon-image" src="data:image/x-icon;base64,${iconBase64}" />` : ''}
            </div>
            <script>
                window.startMoveAnimation = function(targetX, targetY, targetWidth, targetHeight) {
                    const iconWrapper = document.querySelector('.icon-wrapper');
                    
                    const targetCenterX = targetX + targetWidth / 2;
                    const targetCenterY = targetY + targetHeight / 2;
                    
                    const targetXPos = targetCenterX - 90;
                    const targetYPos = targetCenterY - 90;
                    
                    iconWrapper.style.setProperty('--target-x', targetXPos + 'px');
                    iconWrapper.style.setProperty('--target-y', targetYPos + 'px');
                    iconWrapper.style.animation = 'moveAndFade 1.2s cubic-bezier(0.16, 1, 0.3, 1) forwards';
                    
                    setTimeout(() => {
                        window.close();
                    }, 1200);
                };
            </script>
        </body>
        </html>
